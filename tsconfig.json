{
  "include": ["src", "*.ts"],
  "exclude": ["src/**/__tests__/*", "node_modules"],
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "composite": true,
    "noEmit": true,
    "module": "ES2022",
    "target": "ES2020",
    "moduleResolution": "Node",
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsxImportSource": "vue",
    "types": ["node", "jsdom"],
    "baseUrl": ".",
    "outDir": "./dist",
		"noImplicitAny": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true
  }
}
